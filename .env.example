##################################################
# Stock Analyzer - Environment Variables
# 
# Copy this file to .env and fill in your values.
# DO NOT commit your real .env to git!
# The .env file is already in .gitignore
##################################################

# ============================================================================
# FINNHUB API SETTINGS
# ============================================================================

# Required: Finnhub API key for news fetching (Module 4)
# Get your free API key at: https://finnhub.io
# 1. Visit https://finnhub.io
# 2. Sign up for a free account
# 3. Go to account settings -> API keys
# 4. Copy your API key and paste it below
FINNHUB_API_KEY=your_api_key_here

# Optional: Override Finnhub base URL (defaults to https://finnhub.io)
# Only set this if you're using a custom endpoint or proxy
# FINNHUB_BASE_URL=https://finnhub.io

# ============================================================================
# STREAMLIT SETTINGS (Optional)
# ============================================================================

# Optional: Streamlit server port (default: 8501)
# STREAMLIT_SERVER_PORT=8501

# Optional: Streamlit theme (light or dark)
# STREAMLIT_THEME_BASE=light

# ============================================================================
# DEVELOPMENT SETTINGS (Optional)
# ============================================================================

# Optional: Set to "development" for more verbose logging
# LOG_LEVEL=development
